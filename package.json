{
  "name": "nagase",
  "private": true,
  "scripts": {
    "lint": "eslint -c .eslintrc.js 'src/**/*.ts' --quiet",
    "start": "nodemon --watch src --ext ts,graphql --exec 'yarn build && node dist/index.js'",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.graphql dist",
    "test:all": "NODE_ENV=test mocha -r ts-node/register -r test/prepare.ts --fule-trace --bail --reporter dot 'test/**/*.spec.ts'",
    "coverage:all": "NODE_ENV=test nyc mocha -r ts-node/register -r test/prepare.ts --fule-trace --bail --reporter dot 'test/**/*.spec.ts'",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "yarn typeorm migration:run",
    "typeorm:revert": "yarn typeorm migration:revert",
    "typeorm:show": "yarn typeorm migration:show"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/argon2": "^0.15.0",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/faker": "^4.1.9",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/koa": "^2.11.0",
    "@types/koa-graphql": "^0.8.3",
    "@types/koa-mount": "^4.0.0",
    "@types/mocha": "^5.2.7",
    "@types/mocha-prepare": "^0.1.0",
    "@types/rosie": "^0.0.37",
    "@types/sinon": "^7.5.1",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "faker": "^4.1.0",
    "mocha": "^7.0.1",
    "mocha-prepare": "^0.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.1",
    "rosie": "^2.0.1",
    "sinon": "^8.1.1",
    "timekeeper": "^2.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "argon2": "^0.25.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "pg": "^7.17.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.22",
    "typeorm-naming-strategies": "^1.1.0",
    "typeorm-typedi-extensions": "^0.2.3",
    "uuid": "^3.4.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/migrations/*.ts"
    ],
    "all": true
  }
}
